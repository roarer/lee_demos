<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eastaeon.floatapp">
    
    <uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DEVICE_POWER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />	
	
    <original-package android:name="com.eastaeon.floatapp" />

    <uses-sdk android:targetSdkVersion="10" /> 

    <application android:label="@string/app_name" android:theme="@style/Theme.SoundRecorder">


		<activity
            android:name=".SettingActivity"
            android:label="@string/app_name" 
			android:icon="@drawable/float_icon"
			>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
		
		<service
			android:name=".LauncherService"
			>
			<intent-filter>  
			<action android:name="eastaeon.intent.launch.OPEN_LAUNCH"></action>
			</intent-filter>  
		</service>

		<service
			android:name=".FloatService"
			>
		</service>
		
		<receiver android:name=".StartSmallScreen">  
			<intent-filter>  
			<action android:name="eastaeon.intent.action.float.OPEN_FLOAT"></action>  
			<action android:name="eastaeon.intent.action.float.CLOSE_FLOAT"></action> 
			<action android:name="eastaeon.intent.action.launch.OPEN_LAUNCH"></action>  
			<action android:name="eastaeon.intent.action.launch.CLOSE_LAUNCH"></action> 			
			<action android:name="eastaeon.intent.action.CLOSE_FLOTA_APP"></action> 
			
			</intent-filter>  
		</receiver>
		
		<service
			android:name=".calculator.CalculatorSmallScreen"
			>
			<action android:name="eastaeon.intent.action.LAUNCHER_CALCULATOR" />
		</service>

		<receiver android:name=".calculator.StartSmallScreen">  
			<intent-filter>  
			<action android:name="eastaeon.intent.calculator.OPEN_CALCULATOR"></action>  
			<action android:name="eastaeon.intent.calculator.CLOSE_CALCULATOR"></action> 
			<action android:name="eastaeon.intent.action.CLOSE_FLOTA_APP"></action> 
			
			</intent-filter>  
		</receiver>

		<service
		android:name=".videoplayer.VideoSmallScreen"
		>
		</service>

		
		<receiver android:name=".videoplayer.StartSmallScreen">  
			<intent-filter>  
			<action android:name="eastaeon.intent.videoplayer.OPEN_VIDEO"></action>  
			<action android:name="eastaeon.intent.videoplayer.CLOSE_VIDEO"></action> 
			<action android:name="eastaeon.intent.action.CLOSE_FLOTA_APP"></action>
			</intent-filter>  
		</receiver>

		<service android:name=".soundrecorder.SoundRecorderService">
		
		</service>
		<service android:name=".soundrecorder.SoundRecorderSmallScreen">
		
		</service>
		<service android:name=".soundrecorder.RecordingFileListSmallScreen">
		
		</service>
		<receiver android:name=".soundrecorder.StartSmallScreen">
            <intent-filter>
                 <action android:name="eastaeon.intent.soundrecorder.OPEN_SOUND_RECORDER" />
                 <action android:name="eastaeon.intent.soundrecorder.CLOSE_SOUND_RECORDER" />
				 <action android:name="eastaeon.intent.action.CLOSE_FLOTA_APP"></action>
            </intent-filter>		
		</receiver>		
		
		<service
		android:name=".music.MusicSmallScreen"
		>
		</service>
		
		<receiver android:name=".music.StartSmallScreen">  
			<intent-filter>  
			<action android:name="eastaeon.intent.music.OPEN_MUSIC"></action>  
			<action android:name="eastaeon.intent.music.CLOSE_MUSIC"></action> 
			<action android:name="eastaeon.intent.action.CLOSE_FLOTA_APP"></action>
			</intent-filter>  
		</receiver>		
    </application>
		
</manifest> 
